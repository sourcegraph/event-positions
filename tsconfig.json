{
  "extends": "./node_modules/@sourcegraph/tsconfig/tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/",
    "inlineSourceMap": true,
    "inlineSources": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "module": "es2015",
    "target": "es2018",
    "noEmit": true,
    "lib": ["es2017", "dom", "dom.iterable", "es2017.object"],
    "moduleResolution": "node",
    "declaration": false
  }
}
